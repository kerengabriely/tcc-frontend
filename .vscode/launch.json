{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local Debug",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start-local",
            "url": "http://localhost:4200/"
        },
        {
            "name": "Dev Debug",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start-dev",
            "url": "http://localhost:4200/",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:/*": "${webRoot}/*",
                "/./*": "${webRoot}/*",
                "/src/*": "${webRoot}/*",
                "/*": "*",
                "/./~/*": "${webRoot}/node_modules/*"
            }
        },
        {
            "name": "Uat Debug",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start-uat",
            "url": "http://localhost:4200/",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:/*": "${webRoot}/*",
                "/./*": "${webRoot}/*",
                "/src/*": "${webRoot}/*",
                "/*": "*",
                "/./~/*": "${webRoot}/node_modules/*"
            }
        },
        {
            "name": "Prod Debug",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start-prod",
            "url": "http://localhost:4200/",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:/*": "${webRoot}/*",
                "/./*": "${webRoot}/*",
                "/src/*": "${webRoot}/*",
                "/*": "*",
                "/./~/*": "${webRoot}/node_modules/*"
            }
        }
    ]
}